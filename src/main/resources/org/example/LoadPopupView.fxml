<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.LoadPopupController" spacing="10"
      alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Data from Database" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    <ListView fx:id="listView" prefHeight="300.0" prefWidth="300.0"/>
    <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDeleteButtonAction"/>
    <Button fx:id="closeButton" text="Close" onAction="#handleCloseButtonAction"/>
</VBox>
